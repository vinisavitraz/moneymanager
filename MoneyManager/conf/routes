
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                              controllers.web.InicialWeb.index()

# An example controller showing how to write asynchronous code
GET     /message             controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file        controllers.Assets.versioned(path="/public/", file: Asset)


GET      /movimentos                   controllers.web.MovimentoWeb.index()



GET     /v1.0/usuarios                 controllers.api.UsuarioController.getUsuarios()
GET     /v1.0/usuario/id/:id           controllers.api.UsuarioController.getUsuario(id:Integer)
GET     /v1.0/usuarioautenticado       controllers.api.UsuarioController.getUsuarioAutenticado()


GET      /categorias                   controllers.web.CategoriaWeb.index()
GET      /v1.0/categorias                           controllers.api.CategoriaController.getCategorias()
GET      /v1.0/categorias/usuario/:id              controllers.api.CategoriaController.getCategoriasUsuario(id:Integer)
POST     /v1.0/categoria                    controllers.api.CategoriaController.insertCategoria()

      